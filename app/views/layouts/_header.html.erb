<header class="app-header">
  <%= link_to "Sportswear", root_path, :class => "app-header__logo" %>
  <ul class="app-header__links">
    <li>
      <%= link_to "Shop", products_path, class: "app-header__link #{'app-header__link--active' if current_page?(products_path)}" %>
    </li>
    <li>
      <%= link_to "Contacts", contacts_path, class: "app-header__link #{'app-header__link--active' if current_page?(contacts_path)}" %>
    </li>
  </ul>
  <div class="app-header__actions">
    <%= form_with url: products_path, method: :get, local: true, class: "search-form" do %>
      <%= text_field_tag :query, params[:query], placeholder: "Search...", class: "input search-input" %>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "button button__primary" %>
      <%= link_to '/cart', class: 'app-header__cart-link' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="app-header__cart-icon" viewBox="0 0 24 24">
          <path fill="currentColor" d="M16 18a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2a2 2 0 0 1 2-2m0 1a1 1 0 0 0-1 1a1 1 0 0 0 1 1a1 1 0 0 0 1-1a1 1 0 0 0-1-1m-9-1a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2a2 2 0 0 1 2-2m0 1a1 1 0 0 0-1 1a1 1 0 0 0 1 1a1 1 0 0 0 1-1a1 1 0 0 0-1-1M18 6H4.27l2.55 6H15c.33 0 .62-.16.8-.4l3-4c.13-.17.2-.38.2-.6a1 1 0 0 0-1-1m-3 7H6.87l-.77 1.56L6 15a1 1 0 0 0 1 1h11v1H7a2 2 0 0 1-2-2a2 2 0 0 1 .25-.97l.72-1.47L2.34 4H1V3h2l.85 2H18a2 2 0 0 1 2 2c0 .5-.17.92-.45 1.26l-2.91 3.89c-.36.51-.96.85-1.64.85"/>
        </svg>
      <% end %>
    <% else %>
      <%= link_to "Login", new_user_session_path, :class => "button button__primary"  %>
    <% end %>

  </div>
</header>
